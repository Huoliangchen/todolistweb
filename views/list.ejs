<!-- ejs header layout for similar multipage(template) -->
<%- include('header'); -%>

<body>
  <div class="box" id=heading>
    <h1><%=title%></h1>
  </div>

  <div class="box">
    <!-- escape for js statement ejs and use for loop to create dynamic list-->
    <% newItems.forEach((item)=>{%>
    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name = "checkbox" value = <%=item._id%> onChange="this.form.submit()">
        <p><%=item.name%></p>
      </div>
      <input type = "hidden" name ="listName" value = "<%= title %>"></input>
    </form>

    <%})%>

    <form action="/" method="post">
      <input type="text" name="new" placeholder="New Task" autocomplete="off">
      <!-- value was assign to whatever the title is, in this case either datelist or workslist -->
      <button type="submit" name="list" value="<%=title%>"></button>
    </form>
  </div>
  <!-- ejs footer layout template -->
  <%- include('footer'); -%>
